<!--Populate the article handle bar with that particula information 
add an area for users to leave a comment
-->

<div class="row">
    <h3 class="card">{{article.title}}</h3>
    <h4 class="card-panel articleBody">{{body}}</h4>
</div>

<div class="row">
    <div class="col s2"></div>
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
        <h5>Comment on the Weather</h5>
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">perm_identity</i>
                <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">

            </div>

            <div class="input-field">
                <i class="material-icons prefix">comment</i>
                <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate active">

            </div>
            <div class="row">
                <div class="row">
                    <center> <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
                    </center>
                </div>
            </div>
        </div>
    </form>
</div>